<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="search">
	<name>Search - ccBoard</name>
	<author>codeclassic.net Project</author>
	<creationDate>January 2009</creationDate>
	<copyright>Copyright (C) 2008 - 2009 codeclassic.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>thomas@codeclassic.net</authorEmail>
	<authorUrl>http://codeclassic.net</authorUrl>
	<version>0.2.1</version>
	<description>ALLOWS SEARCHING OF ccBoard POSTS</description>
	<files>
		<filename plugin="ccboard">ccboard.php</filename>
	</files>
	<params>
		<param name="search_limit" type="text" size="5" default="50" label="Søkebegrensning" description="Maks antall innlegg som skal komme frem under søket"/>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="search_post" type="radio" default="1" label="Søk i innlegsdetaljene" description="Søke i detaljene om innleggene?">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>

